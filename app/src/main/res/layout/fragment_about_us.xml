<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/ParentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.AboutUsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="8dp"
        android:paddingTop="8dp"
        android:paddingEnd="8dp"
        android:paddingBottom="8dp">


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/app_logo_transparent" />

        <TextView
            android:id="@+id/app_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            style="@style/TitlesThemeLarge"
            android:gravity="center"/>

        <TextView
            android:id="@+id/what_is_buyaround"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/what_is_buyaround"
            style="@style/TitlesTheme"
            android:gravity="center"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/what_is_buyaround_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/what_is_buyaround_text"
            style="@style/SubTitlesTheme"
            android:gravity="center"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/who_are_we"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/who_are_we"
            style="@style/TitlesTheme"
            android:gravity="center"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/who_are_we_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            style="@style/SubTitlesTheme"
            android:gravity="center"
            android:text="@string/who_are_we_text"
            android:layout_marginTop="10dp"/>
    </LinearLayout>

</ScrollView>