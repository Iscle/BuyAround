<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="Toolbar">
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark</item>
    </style>

    <style name="PaddedView">
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="ParentLayout">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="ParentLayoutLarge">
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="SingleLineItem">
        <item name="height">48dp</item>
        <item name="paddingStart">16dp</item>
        <item name="paddingEnd">16dp</item>
    </style>

    <style name="DoubleLineItem">
        <item name="height">64dp</item>
        <item name="paddingStart">16dp</item>
        <item name="paddingEnd">16dp</item>
    </style>

    <style name="DoubleLineItemWithIcon">
        <item name="height">72dp</item>
        <item name="paddingStart">16dp</item>
        <item name="paddingEnd">16dp</item>
    </style>

    <style name="TitlesThemeLarge">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="color">@android:color/black</item>
    </style>

    <style name="TitlesTheme">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="color">@android:color/black</item>
    </style>

    <style name="SubTitlesTheme">
        <item name="android:textSize">16sp</item>
        <item name="color">@android:color/black</item>
    </style>

    <style name="ItemTitlesTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="color">@android:color/black</item>
    </style>

    <style name="ItemSubTitlesTheme">
        <item name="android:textSize">14sp</item>
        <item name="color">@android:color/black</item>
    </style>

    <style name="UsernameTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="color">@android:color/black</item>
    </style>

    <style name="UsermailTheme">
        <item name="android:textSize">14sp</item>
        <item name="color">@android:color/black</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="GreenButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:backgroundTint">@color/selectedNavbar</item>
    </style>

</resources>
