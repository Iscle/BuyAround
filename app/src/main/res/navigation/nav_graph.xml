<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.selepdf.hackovid.fragment.LoginFragment"
        android:label="@string/login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment"
            app:enterAnim="@anim/fragment_open_enter"
            app:exitAnim="@anim/fragment_open_exit"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.selepdf.hackovid.fragment.RegisterFragment"
        android:label="@string/register"
        tools:layout="@layout/fragment_register"/>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.selepdf.hackovid.fragment.HomeFragment"
        android:label="@string/home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:enterAnim="@anim/fragment_fade_enter"
            app:exitAnim="@anim/fragment_fade_exit"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_homeFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_homeFragment_to_accountFragment"
            app:destination="@id/accountFragment" />
        <action
            android:id="@+id/action_homeFragment_to_categoriesFragment2"
            app:destination="@id/categoriesFragment" />
        <action
            android:id="@+id/action_homeFragment_to_favouritesFragment2"
            app:destination="@id/favouritesFragment" />
        <action
            android:id="@+id/action_homeFragment_to_jobsFragment2"
            app:destination="@id/jobsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_ordersFragment2"
            app:destination="@id/ordersFragment" />
    </fragment>
    <fragment
        android:id="@+id/accountFragment"
        android:name="com.selepdf.hackovid.fragment.AccountFragment"
        android:label="@string/my_account"
        tools:layout="@layout/fragment_account" />
    <fragment
        android:id="@+id/categoriesFragment"
        android:name="com.selepdf.hackovid.fragment.CategoriesFragment"
        android:label="@string/categories"
        tools:layout="@layout/fragment_categories" />
    <fragment
        android:id="@+id/favouritesFragment"
        android:name="com.selepdf.hackovid.fragment.FavouritesFragment"
        android:label="@string/favourites"
        tools:layout="@layout/fragment_favourites" />
    <fragment
        android:id="@+id/jobsFragment"
        android:name="com.selepdf.hackovid.fragment.JobsFragment"
        android:label="@string/jobs"
        tools:layout="@layout/fragment_jobs" />
    <fragment
        android:id="@+id/ordersFragment"
        android:name="com.selepdf.hackovid.fragment.OrdersFragment"
        android:label="@string/orders"
        tools:layout="@layout/fragment_orders" />
</navigation>